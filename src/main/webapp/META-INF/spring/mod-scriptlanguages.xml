<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="quercusControllerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="alwaysUseFullPath" value="true"/>
        <property name="urlMap">
            <map>
                <entry key="/*.php">
                    <bean class="org.springframework.web.servlet.mvc.ServletWrappingController">
                        <property name="servletClass" value="org.jahia.services.render.scripting.JahiaQuercusServlet"/>
                         <property name="initParameters">
                             <props>
                                 <prop key="license-directory" >WEB-INF/licenses</prop>
                             </props>
                         </property>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

</beans>